FROM maven:3.9.8-eclipse-temurin-21-alpine AS builder
ARG BACKEND_GATEWAY_CLIENT_APP_NAME
ARG APPLICATION_TAG
ARG BACKEND_GATEWAY_CLIENT_SERVER_PORT
ARG ROUTE1_ID
ARG ROUTE1_URI
ARG ROUTE1_PREDICATE
ARG ROUTE2_ID
ARG ROUTE2_URI
ARG ROUTE2_PREDICATE
ARG ROUTE3_ID
ARG ROUTE3_URI
ARG ROUTE3_PREDICATE
ARG ROUTE4_ID
ARG ROUTE4_URI
ARG ROUTE4_PREDICATE
ARG SERVICE_REGISTRY_APPLICATION_NAME
ARG SERVICE_REGISTRY_SERVER_PORT

ENV BACKEND_GATEWAY_CLIENT_APP_NAME=${BACKEND_GATEWAY_CLIENT_APP_NAME}
ENV APPLICATION_TAG=${APPLICATION_TAG}
ENV BACKEND_GATEWAY_CLIENT_SERVER_PORT=${BACKEND_GATEWAY_CLIENT_SERVER_PORT}
ENV ROUTE1_ID=${ROUTE1_ID}
ENV ROUTE1_URI=${ROUTE1_URI}
ENV ROUTE1_PREDICATE=${ROUTE1_PREDICATE}
ENV ROUTE2_ID=${ROUTE2_ID}
ENV ROUTE2_URI=${ROUTE2_URI}
ENV ROUTE2_PREDICATE=${ROUTE2_PREDICATE}
ENV ROUTE3_ID=${ROUTE3_ID}
ENV ROUTE3_URI=${ROUTE3_URI}
ENV ROUTE3_PREDICATE=${ROUTE3_PREDICATE}
ENV ROUTE4_ID=${ROUTE4_ID}
ENV ROUTE4_URI=${ROUTE4_URI}
ENV ROUTE4_PREDICATE=${ROUTE4_PREDICATE}
ENV SERVICE_REGISTRY_APPLICATION_NAME=${SERVICE_REGISTRY_APPLICATION_NAME}
ENV SERVICE_REGISTRY_SERVER_PORT=${SERVICE_REGISTRY_SERVER_PORT}

WORKDIR /build/
COPY pom.xml /build/
COPY src /build/src
RUN mvn package -DskipTest
WORKDIR /build/target/
RUN java -Djarmode=layertools -jar exalt-hexagonal-archi-kafka-keycloak-gateway-service-proxy.jar extract

FROM maven:3.9.8-eclipse-temurin-21-alpine AS final
COPY --from=builder /build/target/dependencies/ ./
COPY --from=builder /build/target/spring-boot-loader/ ./
COPY --from=builder /build/target/snapshot-dependencies/ ./
COPY --from=builder /build/target/application/ ./

EXPOSE ${GATEWAY_PROXY_SERVER_PORT}

ENTRYPOINT ["java", "org.springframework.boot.loader.launch.JarLauncher"]